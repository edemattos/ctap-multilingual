<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription
	xmlns="http://uima.apache.org/resourceSpecifier">
	<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
	<primitive>true</primitive>
	<annotatorImplementationName>com.ctapweb.feature.featureAE.POSDensityAE
	</annotatorImplementationName>
	<analysisEngineMetaData>
		<name>POS Density Feature: Article</name>
		<description>Calculates article density of the text.
			Articles
			for
			English: include the Penn Treebank tag DT,
			for German: the Tiger tag ART
			for Dutch: the CGN tag ART
			for Portuguese: the Universal Dependencies tag DET

			Formula:
			DTDensity = numDT / numTokens

			AAE
			dependency:
			SentenceAnnotator.xml
			TokenAnnotator.xml
			NTokenFeature.xml
			POSAnnotator.xml
		</description>
		<version>1.0</version>
		<vendor>Xiaobin Chen</vendor>
		<configurationParameters>
			<configurationParameter>
				<name>aeID</name>
				<type>Integer</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>LanguageCode</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>POSTypeEN</name>
				<description>options:
					lexical lexical pos: n, v, adj, and adv
					functional non-lexical pos
					conjunction CC, IN
					determiner PDT, DT
					adjective JJ, JJR, JJS
					noun NN, NNS, NNP, NNPS
					pronoun PRP, PRP$, WP,
					WP$
					adverb RB, RBR, RBS, WRB
					verb VB, VBD, VBG, VBN, VBP, VBZ
					CD
					EX
					FW
					LS
					MD
					POS
					RP
					SYM
					TO
					UH
					space separated multiple types are also allowed,
					e.g. "JJ NN WP"
				</description>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>POSTypeDE</name>
				<description>options:
					Tiger POS tags or predefined collections for:
					lexical word types, functional words, and lexical and functional
					words
				</description>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>POSTypeNL</name>
				<description>options:
					CGN POS tags or predefined collections for:
					lexical word types, functional words, and lexical and functional
					words
				</description>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>POSTypePT</name>
				<description>options:

				</description>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
		</configurationParameters>
		<configurationParameterSettings>
			<nameValuePair>
				<name>POSTypeEN</name>
				<value>
					<string>DT</string>
				</value>
			</nameValuePair>
			<nameValuePair>
				<name>POSTypeDE</name>
				<value>
					<string>ART</string>
				</value>
			</nameValuePair>
			<nameValuePair>
				<name>POSTypeNL</name>
				<value>
					<string>ART</string>
				</value>
			</nameValuePair>
			<nameValuePair>
				<name>POSTypePT</name>
				<value>
					<string>DET</string>
				</value>
			</nameValuePair>
		</configurationParameterSettings>
		<typeSystemDescription>
			<imports>
				<import
					location="../type_system/feature_type/POSDensityType.xml" />
			</imports>
		</typeSystemDescription>
		<typePriorities />
		<fsIndexCollection />
		<capabilities>
			<capability>
				<inputs>
					<type allAnnotatorFeatures="true">com.ctapweb.feature.type.POS</type>
				</inputs>
				<outputs>
					<type allAnnotatorFeatures="true">com.ctapweb.feature.type.POSDensity
					</type>
				</outputs>
				<languagesSupported>
					<language>EN</language>
					<language>DE</language>
					<language>NL</language>
					<language>PT</language>
					<!-- add new language here -->
				</languagesSupported>
			</capability>
		</capabilities>
		<operationalProperties>
			<modifiesCas>true</modifiesCas>
			<multipleDeploymentAllowed>true</multipleDeploymentAllowed>
			<outputsNewCASes>false</outputsNewCASes>
		</operationalProperties>
	</analysisEngineMetaData>
	<resourceManagerConfiguration />
</analysisEngineDescription>
