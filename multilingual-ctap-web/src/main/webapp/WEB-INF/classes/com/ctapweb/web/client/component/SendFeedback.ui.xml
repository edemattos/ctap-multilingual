<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="wrapper">
		<!-- Main section -->
		<section>
			<!-- Page content -->
			<div class="content-wrapper">
				<div class="content-heading">Send Feedback</div>

				<div class="row">

					<div class="col-lg-3"></div>

					<div class="col-lg-6">
						<div class="panel panel-default">
							<!-- <div class="panel-heading text-center"> -->
							<!-- <h3>Edit User Profile</h3> -->
							<!-- </div> -->
							<div class="panel-body">
								<form class="form-horizontal">

									<g:HTMLPanel ui:field="subjectFormGroup" styleName="form-group">
										<label class="col-lg-3 control-label">Subject *</label>
										<div class="col-lg-9">
											<g:TextBox ui:field="subject" styleName="form-control" />
											<small>
												<g:Label ui:field="subjectError" styleName="text-danger"
													visible="false" />
											</small>
										</div>
									</g:HTMLPanel>

									<g:HTMLPanel ui:field="contentFormGroup" styleName="form-group">
										<label class="col-lg-3 control-label">Content *</label>
										<div class="col-lg-9">
											<g:TextArea ui:field="content"
												styleName="form-control" visibleLines="10" />
											<small>
												<g:Label ui:field="contentError" styleName="text-danger"
													visible="false" />
											</small>
										</div>
									</g:HTMLPanel>

									<div class="form-group">
										<div class="col-lg-offset-3 col-lg-9">
											<g:Label ui:field="feedbackLabel" 
											styleName="alert alert-success"
												text="Feedback sent successfully! Thank you!"
												visible="false" />
										</div>
									</div>

									<div class="form-group">
										<div class="col-lg-offset-3 col-lg-9">
											<g:Button text="Send" ui:field="send"
												styleName="btn btn-sm btn-primary" />
										</div>
									</div>
								</form>
							</div>
						</div>
						<!-- END panel -->
					</div>


				</div>
			</div>
		</section>

	</g:HTMLPanel>
</ui:UiBinder> 