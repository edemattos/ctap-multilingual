<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="wrapper">
		<!-- Main section -->
		<section>
			<!-- Page content -->
			<div class="content-wrapper">
				<div class="content-heading">Complexity Feature Manager</div>



				<div class="row">

					<!-- corpus list panel -->
					<g:HTMLPanel ui:field="cfListPanel" styleName="col-lg-12">

						<div class="panel panel-default">
							<div class="panel-heading">
								Complexity Feature Operations
							</div>
							<div class="panel-body">
								<g:Button ui:field="newCF" styleName="btn mb-sm btn-primary btn-labeled" />
								<g:Button ui:field="deleteSelected" styleName="btn mb-sm btn-danger btn-labeled" />

								<div class="btn-group mb-sm">
									<button type="button" data-toggle="dropdown"
										class="btn dropdown-toggle btn-warning">
										Select
										<span class="caret"></span>
									</button>
									<ul role="menu" class="dropdown-menu">
										<li>
											<g:Anchor ui:field="selectAll">All</g:Anchor>
										</li>
										<li>
											<g:Anchor ui:field="selectClear">Clear</g:Anchor>
										</li>
										<li>
											<g:Anchor ui:field="selectReverse">Reverse</g:Anchor>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<g:HTMLPanel ui:field="feedbackPanel" styleName="alert"
							visible="false">
							<em class="fa fa-exclamation-circle fa-lg fa-fw"></em>
							<g:InlineLabel ui:field="feedbackLabel">feedback</g:InlineLabel>
							<g:Button ui:field="closeFeedbackPanel" styleName="close"
								text="X" />
						</g:HTMLPanel>
						<p class="lead">List of Corpora</p>
						<p>
							Show
							<g:ListBox ui:field="nRecords" width="80px">
								<g:item value="10">10</g:item>
								<g:item value="20">20</g:item>
								<g:item value="30">30</g:item>
								<g:item value="40">40</g:item>
								<g:item value="50">50</g:item>
								<g:item value="100">100</g:item>
							</g:ListBox>
							records per page
						</p>


					</g:HTMLPanel>

					<!-- Details sidebar -->
					<g:HTMLPanel ui:field="cfDetailPanel" styleName="col-lg-5"
						visible="false">
						<div class="panel panel-primary">
							<div class="panel-heading">
								Complexity Feature Detail
							</div>
							<div class="panel-body">
								<!-- <p class="lead">Corpus detail</p> -->
								<div class="form-group">
									<p>Created on</p>
									<g:TextBox styleName="form-control" enabled="false"
										ui:field="createdOn" />
								</div>
								<div class="form-group">
									<p>Name *</p>
									<g:TextBox styleName="form-control" ui:field="cfName" />
								</div>
								<div class="form-group">
									<p>Description</p>
									<g:TextArea height="200px" styleName="form-control"
										ui:field="cfDescription" />
								</div>
								<!-- <div class="form-group"> -->
								<!-- <p>Descriptor File *</p> -->
								<!-- <g:TextBox styleName="form-control" ui:field="aeDescriptorFile" -->
								<!-- enabled="false" /> -->
								<!-- </div> -->

								<g:Hidden ui:field="cfIdHidden" />

								<!-- the select ae controls -->
								<div class="row">
									<div class="col-lg-5">
										<div class="form-group">
											<p>Selected AE</p>
											<g:ListBox styleName="form-control m-b"
												multipleSelect="false" visibleItemCount="10" ui:field="aeSelected" />
										</div>
									</div>

									<div class="col-lg-2">
										<br />
										<br />
										<br />
										<br />
										<g:Button styleName="btn btn-sm btn-info" ui:field="selectAE"
											text="&lt;&lt;" />
										<br />
										<br />
										<g:Button styleName="btn btn-sm btn-info" ui:field="removeAE"
											text="&gt;&gt;" />
									</div>

									<div class="col-lg-5">
										<div class="form-group">
											<p>All AE</p>
											<g:ListBox styleName="form-control m-b"
												multipleSelect="false" visibleItemCount="10" ui:field="aeAll" />
										</div>
									</div>
								</div>


								<g:Button ui:field="saveCFDetail" styleName="btn btn-sm btn-primary"
									text="Save" />
								<g:Button ui:field="closeCFDetail" styleName="btn btn-sm"
									text="Close" />
							</div>
						</div>
					</g:HTMLPanel>
				</div>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder> 