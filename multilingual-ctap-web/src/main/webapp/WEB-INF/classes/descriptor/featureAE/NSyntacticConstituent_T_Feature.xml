<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>  <annotatorImplementationName>com.ctapweb.feature.featureAE.NSyntacticConstituentAE</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>Number of Syntactic Constituents: T-units</name>
    <description>Calculates the number of a specific syntactic constituents in the text. This feature counts the number of T-units in the text. 

    AAE dependency:
	SentenceAnnotator.xml
	TokenAnnotator.xml
    POSAnnotator.xml
	ParseTreeAnnotator.xml</description>
    <version>1.0</version>
    <vendor>Xiaobin Chen</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>aeID</name>
        <type>Integer</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>tregexPatternsDE</name>
        <description>Patterns of the constituents in Tregex format (for German)</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>tregexPatternsEN</name>
        <description>Patterns of the constituents in Tregex format (for English)</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
        <configurationParameter>
        <name>tregexPatternsPT</name>
        <description>Patterns of the constituents in Tregex format (for Portuguese)</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>constituentType</name>
        <description>One of the following: 
VP      Verb Phrases
C       Clauses
T       T-units
DC      Dependent Clauses
CT      Complex T-unit
CP      Coordinate Phrases
CN      Complex nominal
FC      Fragment Clauses
FT      Frgment T-units
NP      Noun phrases
PP      Prepositional phrases
CPP     Complex Prepoistional phrases
VC      Verb cluster
RS      Relative clauses
</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
	<configurationParameter>
		<name>LanguageCode</name>
		<type>String</type>
		<multiValued>false</multiValued>
		<mandatory>false</mandatory>
	</configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>constituentType</name>
        <value>
          <string>T</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>tregexPatternsEN</name>
        <value>
          <array>
            <string>S|SBARQ|SINV|SQ &gt; TOP | [$-- S|SBARQ|SINV|SQ !&gt;&gt; SBAR|VP]</string>
            </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>tregexPatternsDE</name>
        <value>
          <array>
            <!--<string>CO|DL|CS|S|VP [&lt;&lt; /V.FIN|V.IMP/] [!&lt;1 /KO(U.|KOM)|PREL.*|PW.*/] &amp; [!&lt; (@NP|AP|PP &lt; /PREL.*|PW.*/)] &amp; [!&lt;, /V.FIN|V.IMP/ &amp; !&lt; /[!\?]/] &amp; [!&lt;- /V.FIN|V.IMP/]</string>-->
            <string>CO|DL|S|VP [&lt;&lt; /V.FIN|V.IMP/] [!&lt;1 /KO(U.|KOM)|PREL.*|PW.*/] &amp; [!&lt; (@NP|AP|PP &lt; /PREL.*|PW.*/)] &amp; [!&lt;, /V.FIN|V.IMP/ &amp; !&lt; /[!\?]/] &amp; [!&lt;- /V.FIN|V.IMP/] &amp; [!&gt;&gt; CO|DL|S|VP]</string>
            </array>
        </value>
      </nameValuePair>
        <nameValuePair>
				<name>tregexPatternsPT</name>
				<value>
					<array>
                        <string>VP [&gt; S | &gt; (CCONJ &gt; S)]</string> <!-- <1 PRON|NP|PROPN|NOUN -->
                    </array>
                </value>
            </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
	<imports>
		<import
			location="../type_system/feature_type/NSyntacticConstituentType.xml" />
	</imports>
    </typeSystemDescription>
	<typePriorities />
	<fsIndexCollection />
	<capabilities>
		<capability>
			<inputs>
				<type allAnnotatorFeatures="true">com.ctapweb.feature.type.ParseTree
				</type>
			</inputs>
			<outputs>
				<type allAnnotatorFeatures="true">com.ctapweb.feature.type.NSyntacticConstituent
				</type>
			</outputs>
			<languagesSupported>
				<language>EN</language>
				<language>DE</language>
                <language>PT</language>
				<!-- add new language here -->
			</languagesSupported>
		</capability>
	</capabilities>
	<operationalProperties>
		<modifiesCas>true</modifiesCas>
		<multipleDeploymentAllowed>true</multipleDeploymentAllowed>
		<outputsNewCASes>false</outputsNewCASes>
	</operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
